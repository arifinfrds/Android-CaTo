<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arifinfirdaus.cato.RegistrationActivity"
    tools:showIn="@layout/activity_registration">

    <ImageView
        android:id="@+id/registration_logo"
        android:layout_width="162dp"
        android:layout_height="96dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="42dp"
        android:src="@drawable/logopng"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginLeft="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginRight="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginStart="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginTop="42dp"
        android:hint="store name"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_logo" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginLeft="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginRight="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginStart="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginTop="8dp"
        android:hint="description"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_store_name" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginLeft="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginRight="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginStart="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginTop="8dp"
        android:hint="address"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_description" />

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginLeft="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginRight="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginStart="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginTop="8dp"
        android:hint="contact"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_address" />

    <EditText
        android:id="@+id/et_office_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginLeft="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginRight="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginStart="@dimen/sign_in_compomponents_margin_content"
        android:layout_marginTop="8dp"
        android:hint="office hours"
        android:inputType="textEmailAddress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_contact" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_office_hours" />

</android.support.constraint.ConstraintLayout>
