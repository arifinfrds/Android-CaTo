<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arifinfirdaus.cato.MainPenjualActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main_penjual" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit_cover_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="260dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:backgroundTint="@color/orange_500"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:srcCompat="@drawable/cover" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:backgroundTint="@color/yellow_A400"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:srcCompat="@drawable/pensil_saja" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:backgroundTint="@color/A400"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:srcCompat="@drawable/camera_saja" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_home_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:backgroundTint="@color/light_blue_A400"
        app:srcCompat="@drawable/ic_add_white_24dp" />

    <!--<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--android:id="@+id/framelayout_fab_focus_clicked"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/black"-->
    <!--android:elevation="20dp"-->
    <!--android:visibility="invisible"></FrameLayout>-->

</android.support.design.widget.CoordinatorLayout>
